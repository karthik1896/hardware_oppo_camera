    <item android:state_pressed="true" app:state_inverse_color="true">
        <bitmap android:src="@drawable/pic_video_record_resume" android:tint="@color/inverse_text_color" android:alpha="0.8"/>
    </item>
    <item android:state_pressed="true" app:state_inverse_color="false">
